<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/bg_track_campaign_signatures">

    <TextView
        android:id="@+id/tvYourPlanned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="@string/your_planned_signatures" />

    <TextView
        android:id="@+id/tvYourPlannedNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvYourPlanned"
        app:layout_constraintStart_toEndOf="@id/tvYourPlanned"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:text="200" />

    <TextView
        android:id="@+id/tvYourCollected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvYourPlanned"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="@string/your_collected_signatures" />

    <TextView
        android:id="@+id/tvYourCollectedNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvYourCollected"
        app:layout_constraintStart_toEndOf="@id/tvYourCollected"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:text="200" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvYourPlanned"
        app:layout_constraintBottom_toBottomOf="@id/tvYourCollected"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_round_red"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:text="@string/update"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAllCaps="false"/>

</androidx.constraintlayout.widget.ConstraintLayout>